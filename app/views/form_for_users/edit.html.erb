<%= form_for @form_for_user do |f| %>
  <ul>
    <% @form_for_user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>

  <%= f.label :username %>: 
  <%= f.text_field :username %><br />

  <%= f.label :password %>: 
  <%= f.password_field :password %><br />

  <%= f.submit %>
<% end %>
